<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headerCollectionLayout"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/background_cell_gray">

        <TextView
            android:id="@+id/bucketTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bucket name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="14sp"
            android:textColor="@color/text_gray" />

        <ImageView
            android:id="@+id/arrowImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_arrow_down" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:src="@drawable/img_bucket_bottom"/>

    </RelativeLayout>

    <org.lucasr.twowayview.widget.TwoWayView
        android:id="@+id/recycler_collection_view"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:visibility="visible"
        app:twowayview_layoutManager="StaggeredGridLayoutManager"
        app:twowayview_numColumns="4"
        app:twowayview_numRows="0"
        android:padding="0.5dp" />

</LinearLayout>