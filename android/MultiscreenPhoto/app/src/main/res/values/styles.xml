<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>
    </style>

    <style name="MyActionBar" parent="android:Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/gray</item>
        <item name="android:displayOptions">showTitle|showHome</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!--The sytel for ActivityWelcome, ActivityService and ActivityCompatibleList-->
    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--Used by ActivityMore-->
    <style name="Theme.TransparentActionBar" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:displayOptions">showTitle|showHome</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--ActivityPhotoSlider-->
    <style name="CustomActionBarTheme"
        parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:homeAsUpIndicator">@drawable/ic_back</item>

        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:alpha">1.0</item>
        <item name="android:actionBarStyle">@style/MyActionBarTransucent</item>

        <!-- Support library compatibility -->
        <item name="windowActionBarOverlay">true</item>
        <item name="actionBarStyle">@style/MyActionBarTransucent</item>
    </style>

    <style name="MyActionBarTransucent" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/bg_subtitlebar</item>
        <item name="android:displayOptions">showTitle|showHome</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>

        <!-- Support library compatibility -->
        <item name="background">@drawable/bg_subtitlebar</item>
        <item name="displayOptions">showTitle|showHome</item>
        <item name="titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

</resources>
